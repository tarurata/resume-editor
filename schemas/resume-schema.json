{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://resume-editor.com/schemas/resume-schema.json",
    "title": "Resume Data Model",
    "description": "Canonical data model for resume.json with sections for title, summary, experience, and skills",
    "type": "object",
    "required": [
        "title",
        "summary",
        "experience",
        "skills"
    ],
    "properties": {
        "title": {
            "type": "string",
            "description": "Resume title or professional headline",
            "minLength": 1,
            "maxLength": 100
        },
        "summary": {
            "type": "string",
            "description": "Professional summary or objective",
            "minLength": 1,
            "maxLength": 500
        },
        "experience": {
            "type": "array",
            "description": "Array of work experience entries",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "role",
                    "organization",
                    "startDate"
                ],
                "properties": {
                    "role": {
                        "type": "string",
                        "description": "Job title or role",
                        "minLength": 1,
                        "maxLength": 100
                    },
                    "organization": {
                        "type": "string",
                        "description": "Company or organization name",
                        "minLength": 1,
                        "maxLength": 100
                    },
                    "location": {
                        "type": "string",
                        "description": "Work location (city, state/country)",
                        "maxLength": 100
                    },
                    "startDate": {
                        "type": "string",
                        "description": "Start date in YYYY-MM format",
                        "pattern": "^\\d{4}-\\d{2}$"
                    },
                    "endDate": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "End date in YYYY-MM format, null for current position",
                        "pattern": "^(\\d{4}-\\d{2}|null)$"
                    },
                    "bullets": {
                        "type": "array",
                        "description": "Array of achievement/description bullets",
                        "items": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 200
                        },
                        "minItems": 1,
                        "maxItems": 10
                    }
                },
                "additionalProperties": false
            }
        },
        "skills": {
            "type": "array",
            "description": "Array of skills or competencies",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
            },
            "uniqueItems": true
        },
        "factsInventory": {
            "type": "object",
            "description": "Facts inventory for guardrails and validation",
            "properties": {
                "skills": {
                    "type": "array",
                    "description": "Validated skills list for guardrails",
                    "items": {
                        "type": "string"
                    }
                },
                "organizations": {
                    "type": "array",
                    "description": "Validated organization names for guardrails",
                    "items": {
                        "type": "string"
                    }
                },
                "roles": {
                    "type": "array",
                    "description": "Validated job roles/titles for guardrails",
                    "items": {
                        "type": "string"
                    }
                },
                "dates": {
                    "type": "array",
                    "description": "Validated date ranges for guardrails",
                    "items": {
                        "type": "object",
                        "properties": {
                            "start": {
                                "type": "string",
                                "pattern": "^\\d{4}-\\d{2}$"
                            },
                            "end": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "pattern": "^(\\d{4}-\\d{2}|null)$"
                            }
                        },
                        "required": [
                            "start"
                        ]
                    }
                },
                "certifications": {
                    "type": "array",
                    "description": "Validated certifications for guardrails",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}